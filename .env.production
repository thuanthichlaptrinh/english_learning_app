# ==============================================
# CARD WORDS - PRODUCTION ENVIRONMENT
# Copy this file to .env and update values
# ==============================================

# ============================================
# DATABASE (PostgreSQL)
# ============================================
POSTGRES_USER=cardwords
POSTGRES_PASSWORD=YOUR_STRONG_PASSWORD_HERE
POSTGRES_DB=card_words
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_EXTERNAL_PORT=5433

# ============================================
# CACHE (Redis)
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_EXTERNAL_PORT=6379
REDIS_DB=0
REDIS_AI_DB=1
REDIS_PASSWORD=
REDIS_TIMEOUT=60000

# ============================================
# JWT AUTHENTICATION
# ============================================
# Generate: openssl rand -base64 64
JWT_SECRET=YOUR_JWT_SECRET_256_BITS_HERE
JWT_EXPIRATION_TIME=86400000
JWT_REFRESH_TOKEN_EXPIRATION=604800000

# ============================================
# SPRING BOOT API
# ============================================
SERVER_SPRING_PORT=8080

# ============================================
# AI SERVICE (FastAPI)
# ============================================
SERVER_FLASH_PORT=8001
API_HOST=0.0.0.0
LOG_LEVEL=WARNING
ACTIVE_MODEL_TYPE=lightgbm
AI_SERVICE_URL=http://card-words-ai:8001

# ============================================
# EMAIL (Gmail SMTP)
# ============================================
# Use App Password: https://myaccount.google.com/apppasswords
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# ============================================
# GOOGLE OAUTH2
# ============================================
# Get from: https://console.cloud.google.com/
GOOGLE_OAUTH_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-client-secret
GOOGLE_OAUTH_REDIRECT_URI=http://YOUR_VPS_IP:8080/api/v1/auth/oauth2/callback/google

# ============================================
# FIREBASE STORAGE
# ============================================
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_SERVICE_ACCOUNT_PATH=/app/firebase-service-account.json

# ============================================
# GEMINI AI
# ============================================
GEMINI_API_KEY=your-gemini-api-key

# ============================================
# ACTIVATION
# ============================================
ACTIVATION_EXPIRED_TIME=86400000
ACTIVATION_RESEND_INTERVAL=60000

# ============================================
# API KEYS
# ============================================
ADMIN_API_KEY=your-admin-api-key
INTERNAL_API_KEY=your-internal-api-key

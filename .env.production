# ==============================================
# CARD WORDS - PRODUCTION ENVIRONMENT
# Copy this file to .env and update values
# ==============================================

# ============================================
# DATABASE (PostgreSQL)
# ============================================
POSTGRES_USER=your-db-user
POSTGRES_PASSWORD=your-db-password
POSTGRES_DB=card_words
POSTGRES_HOST=your-db-host
POSTGRES_PORT=5432
POSTGRES_EXTERNAL_PORT=5433

# ============================================
# CACHE (Redis)
# ============================================
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_EXTERNAL_PORT=6379
REDIS_DB=0
REDIS_AI_DB=1
REDIS_PASSWORD=your-redis-password
REDIS_TIMEOUT=60000

# ============================================
# JWT AUTHENTICATION
# ============================================
# Generate: openssl rand -base64 64
JWT_SECRET=your-jwt-secret-key-generate-with-openssl
JWT_EXPIRATION_TIME=86400000
JWT_REFRESH_TOKEN_EXPIRATION=604800000

# ============================================
# SPRING BOOT API
# ============================================
SERVER_SPRING_PORT=8080

# ============================================
# AI SERVICE (FastAPI)
# ============================================
SERVER_FLASH_PORT=8001
API_HOST=0.0.0.0
LOG_LEVEL=WARNING
ACTIVE_MODEL_TYPE=lightgbm
AI_SERVICE_URL=http://card-words-ai:8001

# ============================================
# EMAIL (Gmail SMTP)
# ============================================
# Use App Password: https://myaccount.google.com/apppasswords
# Railway blocks port 465 (SSL), use port 587 (TLS/STARTTLS) instead
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_STARTTLS_ENABLE=true
MAIL_SSL_ENABLE=false

# ============================================
# GOOGLE OAUTH2
# ============================================
# Get from: https://console.cloud.google.com/
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret
GOOGLE_OAUTH_REDIRECT_URI=https://your-domain.com/api/v1/auth/google/callback

# ============================================
# FIREBASE STORAGE
# ============================================
FIREBASE_STORAGE_BUCKET=your-firebase-bucket.firebasestorage.app
FIREBASE_SERVICE_ACCOUNT_PATH=/app/firebase-service-account.json

# ============================================
# GEMINI AI
# ============================================
GEMINI_API_KEY=your-gemini-api-key

# ============================================
# ACTIVATION
# ============================================
ACTIVATION_EXPIRED_TIME=86400000
ACTIVATION_RESEND_INTERVAL=60000

# ============================================
# API KEYS
# ============================================
ADMIN_API_KEY=your-admin-api-key
INTERNAL_API_KEY=your-internal-api-key